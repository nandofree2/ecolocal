<% provide :page_title, "Users" %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Users List</h3>
    <div class="card-tools">
      <%= link_to new_user_path, class: "btn btn-primary btn-sm" do %>
         <i class="fas fa-plus"></i> Add New User
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <% if @users.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><span class="badge badge-info"><%= user.role&.name || "No Role" %></span></td>
              <td>
                <%= link_to user_path(user), class: "btn btn-info btn-xs", title: "View" do %>
                   <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to edit_user_path(user), class: "btn btn-warning btn-xs", title: "Edit" do %>
                   <i class="fas fa-pencil-alt"></i>
                <% end %>
                <%= link_to user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs", title: "Delete" do %>
                   <i class="fas fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">No users found. <%= link_to "Create one", new_user_path %></p>
    <% end %>
  </div>
</div>
