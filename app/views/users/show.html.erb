<% provide :page_title, @user.name %>

<div class="row">
  <div class="col-md-8">
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">User Details</h3>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label>Name</label>
          <p><strong><%= @user.name %></strong></p>
        </div>
        <div class="form-group">
          <label>Email</label>
          <p><strong><%= @user.email %></strong></p>
        </div>
        <div class="form-group">
          <label>Role</label>
          <p><strong><span class="badge badge-info"><%= @user.role&.name || "No Role" %></span></strong></p>
        </div>
        <div class="form-group">
          <label>Created At</label>
          <p><strong><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></strong></p>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to "Edit", edit_user_path(@user), class: "btn btn-warning" %>
        <%= link_to "Back", users_path, class: "btn btn-secondary" %>
        <%= link_to "Delete", user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger float-right" %>
      </div>
    </div>
  </div>
</div>
