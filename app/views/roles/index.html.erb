<% provide :page_title, "Roles" %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Roles List</h3>
    <div class="card-tools">
      <%= link_to new_role_path, class: "btn btn-primary btn-sm" do %>
        <i class="fas fa-plus"></i> Add New Role
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <% if @roles.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Users Count</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.id %></td>
              <td><%= role.name %></td>
              <td><%= truncate(role.description, length: 50) %></td>
              <td><span class="badge badge-secondary"><%= role.users.count %></span></td>
              <td>
                <%= link_to role_path(role), class: "btn btn-info btn-xs", title: "View" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to edit_role_path(role), class: "btn btn-warning btn-xs", title: "Edit" do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
                <%= link_to role_path(role), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs", title: "Delete" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">No roles found. <%= link_to "Create one", new_role_path %></p>
    <% end %>
  </div>
</div>
