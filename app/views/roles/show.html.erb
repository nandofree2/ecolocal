<% provide :page_title, @role.name %>

<div class="row">
  <div class="col-md-8">
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">Role Details</h3>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label>Name</label>
          <p><strong><%= @role.name %></strong></p>
        </div>
        <div class="form-group">
          <label>Description</label>
          <p><strong><%= simple_format(@role.description) %></strong></p>
        </div>
        <div class="form-group">
          <label>Users with this Role</label>
          <p>
            <% if @role.users.any? %>
              <ul>
                <% @role.users.each do |user| %>
                  <li><%= link_to user.name, user_path(user) %> (<%= user.email %>)</li>
                <% end %>
              </ul>
            <% else %>
              <em class="text-muted">No users assigned to this role yet.</em>
            <% end %>
          </p>
        </div>
        <div class="form-group">
          <label>Created At</label>
          <p><strong><%= @role.created_at.strftime("%B %d, %Y at %I:%M %p") %></strong></p>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to "Edit", edit_role_path(@role), class: "btn btn-warning" %>
        <%= link_to "Back", roles_path, class: "btn btn-secondary" %>
        <%= link_to "Delete", role_path(@role), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger float-right" %>
      </div>
    </div>
  </div>
</div>
