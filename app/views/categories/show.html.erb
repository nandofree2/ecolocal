<% content_for :page_title, "Category Details" %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= @category.name %></h3>
    <div class="card-tools">
      <%= link_to "Edit", edit_category_path(@category), class: "btn btn-sm btn-primary" %>
      <%= link_to "Back", categories_path, class: "btn btn-sm btn-secondary" %>
    </div>
  </div>

  <div class="card-body">
    <p><strong>Name:</strong> <%= @category.name %></p>
    <p><strong>Quantity:</strong> <%= @category.sku %></p>
    <p><strong>description:</strong> <%= @category.description %></p>
  </div>
</div>