<% content_for :page_title, "Category" %>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">Category</h3>
    <div class="card-tools">
      <%= link_to new_category_path, class: "btn btn-sm btn-primary" do %>
        <i class="fas fa-plus"></i> New Category
      <% end %>
    </div>
  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Sku</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.sku %></td>
            <td><%= category.description %></td>
            <td class="text-right">
              <%= link_to category_path(category), class: "btn btn-sm btn-info", title: "Show" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_category_path(category), class: "btn btn-sm btn-warning", title: "Edit" do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>
              <%= button_to category_path(category), method: :delete, form: { class: "d-inline" }, class: "btn btn-sm btn-danger category-show-delete-modal", title: "Delete", data: {
                url: category_path(category),
                name: category.name,
                sku: category.sku
              } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
