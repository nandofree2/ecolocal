<% content_for :page_title, "Category" %>

<div class="card">
  <div class="card-header ">
      <div class="mb-4">

        <%= search_form_for @q, url: categories_path, method: :get, html: { class: "row g-2 align-items-end" } do |f| %>
          <div class="col-md-1">
            <%= f.label :name_or_sku_cont, "Search", class: "form-label" %>
            <%= f.search_field :name_or_sku_cont, placeholder: "name or sku...", class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.submit "Search", class: "btn btn-primary" %>
          </div>
          <div class="col-md-2">
            <%= link_to "#", class: "btn btn-custom-primary shadow-sm w-100", 
                data: { bs_toggle: "modal", bs_target: "#categoryModal" } do %>
              <i class="fas fa-plus-circle mr-1"></i> New Category
            <% end %>
          </div>
        <% end %>
      </div>
  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap mb-0">
      <thead>
        <tr>
          <th>No</th>
          <th><%= sort_link @q, :name, "Name" %></th>
          <th><%= sort_link @q, :sku, "SKU" %></th>
          <th>Description</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
      <tbody id="category-table-body">
        <% @categories.each_with_index do |category, index| %>
          <tr>
            <td><%= (@categories.current_page - 1) * @categories.limit_value + index + 1 %></td>
            <td><%= category.name %></td>
            <td><%= category.sku %></td>
            <td><%= category.description %></td>
            <td class="text-right">
              <%= link_to category_path(category), class: "btn btn-sm btn-info", title: "Show" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to "#", class: "btn btn-sm btn-warning edit-category-btn", 
                data: { 
                  bs_toggle: "modal", 
                  bs_target: "#categoryModalEdit",
                  id: category.id, 
                  name: category.name, 
                  sku: category.sku, 
                  description: category.description,
                  url: category_path(category) 
                } do %>
              <i class="fas fa-pencil-alt"></i>
            <% end %>
              <%= button_to category_path(category), method: :delete, form: { class: "d-inline" }, class: "btn btn-sm btn-danger category-show-delete-modal", title: "Delete", data: {
                url: category_path(category),
                name: category.name,
                sku: category.sku
              } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-3 d-flex justify-content-center">
      <%= paginate @categories %>
    </div>
  </div>
</div>
