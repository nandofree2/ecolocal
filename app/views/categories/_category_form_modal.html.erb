<div class="modal fade" id="categoryModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form id="category-form" action="<%= categories_path %>" method="POST">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="modal-body px-4">
          
          <div class="form-group mb-3">
            <label class="form-label">Category Name</label>
            <input type="text" name="category[name]" id="cat_name" class="form-control shadow-none" placeholder="e.g. Electronics">
            <div class="invalid-feedback" id="error-name"></div>
          </div>

          <div class="form-group mb-3">
            <label class="form-label">SKU Code</label>
            <input type="text" name="category[sku]" id="cat_sku" class="form-control shadow-none" placeholder="CAT-XXXX">
            <div class="invalid-feedback" id="error-sku"></div>
          </div>

          <div class="form-group mb-3">
            <label class="form-label">Description</label>
            <textarea name="category[description]" id="cat_description" rows="3" class="form-control shadow-none" placeholder="Optional..."></textarea>
            <div class="invalid-feedback" id="error-description"></div>
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" id="submit-btn" class="btn btn-primary " >
            Create Category
          </button>
        </div>
      </form>
    </div>
  </div>
</div>