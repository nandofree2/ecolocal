<% content_for :page_title, "Province" %>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">Province</h3>
    <div class="card-tools">
      <%= link_to "New Province", new_province_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Sku</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @provinces.each do |province| %>
          <tr>
            <td><%= province.name %></td>
            <td><%= province.sku %></td>
            <td><%= province.description %></td>
            <td>
              <%= link_to "Show", province_path(province), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Edit", edit_province_path(province), class: "btn btn-sm btn-outline-primary" %>
              <%= button_to "Delete",province_path(province),method: :delete, form: { class: "d-inline" },class: "btn btn-sm btn-outline-danger province-show-delete-modal",data: {
                url: province_path(province),
                name: province.name,
                sku: province.sku
              }%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-3 d-flex justify-content-center">
      <%= paginate @provinces %>
    </div>
  </div>
</div>
