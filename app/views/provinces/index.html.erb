<% content_for :page_title, "Province" %>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div class="card-tools">
      <%= link_to new_province_path, class: "btn btn-sm btn-primary" do %>
        <i class="fas fa-plus"></i> New Province
      <% end %>
    </div>
  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Sku</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @provinces.each do |province| %>
          <tr>
            <td><%= province.name %></td>
            <td><%= province.sku %></td>
            <td><%= province.description %></td>
            <td class="text-right">
              <%= link_to edit_province_path(province), class: "btn btn-sm btn-warning", title: "Edit" do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>
              <%= button_to province_path(province), method: :delete, form: { class: "d-inline" }, class: "btn btn-sm btn-danger province-show-delete-modal", title: "Delete", data: {
                url: province_path(province),
                name: province.name,
                sku: province.sku
              } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-3 d-flex justify-content-center">
      <%= paginate @provinces %>
    </div>
  </div>
</div>
