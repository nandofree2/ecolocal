<% content_for :page_title, "UoMs" %>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">Units of Measure</h3>
    <div class="card-tools">
      <%= link_to "New UoM", new_uom_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @uoms.each do |u| %>
          <tr>
            <td><%= u.name %></td>
            <td><%= u.quantity %></td>
            <td>
              <%= link_to "Show", uom_path(u), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Edit", edit_uom_path(u), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Delete", uom_path(u), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
