<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errors:</h4>
      <ul>
        <% product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group col-md-3">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: "form-control", required: true %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :price %>
      <%= form.number_field :price, step: :any, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :status_product, "Status" %>
      <%= form.select :status_product, Product.status_products.keys.map { |s| [s.titleize, s] }, { prompt: "Select status" },class: "form-control" %>
    </div>

        <div class="form-group col-md-3">

      <%= form.label :unit_of_measurement_id, "Unit of Measurement", class: "form-label" %>
      <%= form.select :unit_of_measurement_id,@unit_of_measurements.map { |id, name| [name, id] },{ prompt: "Select UOM" },class: "form-control", required: true %>
    </div>

        <div class="form-group col-md-3">

      <%= form.label :category_id, "Category", class: "form-label" %>
      <%= form.select :category_id,@categories.map { |id, name| [name, id] },{ prompt: "Select Category" },class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Back", products_path, class: "btn btn-secondary ml-2" %>
  </div>
<% end %>