<% content_for :page_title, "Products" %>

<div class="card">
  <div class="card-header ">
    <div class="mb-4">
      <%= search_form_for @q, url: products_path, method: :get, html: { class: "row g-2 align-items-end" } do |f| %>
        <div class="col-md-1">
          <%= f.label :name_or_sku_cont, "Search", class: "form-label" %>
          <%= f.search_field :name_or_sku_cont, placeholder: "name or sku...", class: "form-control" %>
        </div>

        <div class="col-md-1">
          <%= f.label :category_id_eq, "Category", class: "form-label" %>
          <%= f.collection_select :category_id_eq, @categories, :id, :name, { include_blank: "All Categories" }, class: "form-select" %>
        </div>

        <div class="col-md-1">
          <%= f.label :s, "Sort by", class: "form-label" %>
          <%= f.select :s, [
              ['Newest First', 'created_at desc'],
              ['Oldest First', 'created_at asc'],
              ['Price Low → High', 'price asc'],
              ['Price High → Low', 'price desc']
            ],
            { include_blank: "Select..." },
            class: "form-select" %>
        </div>

        <div class="col-md-2">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </div>
        <div class="col-md-2">
          <%= link_to "New Product", new_product_path, class: "btn btn-sm btn-primary " %>
        </div>
      <% end %>
    </div>

  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>SKU</th>
          <th>Category</th>
          <th>UOM</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.sku %></td>
            <td><%= product.category.name %></td>
            <td><%= product.unit_of_measurement.name %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td>
              <%= link_to "Show", product_path(product), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Edit", edit_product_path(product), class: "btn btn-sm btn-outline-primary" %>
              <%= button_to "Delete",product_path(product),method: :delete, form: { class: "d-inline" },class: "btn btn-sm btn-outline-danger show-delete-modal",data: {
                url: product_path(product),
                name: product.name,
                sku: product.sku
              }%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-3 d-flex justify-content-center">
      <%= paginate @products %>
    </div>
  </div>
</div>