<% content_for :page_title, "Products" %>

<div class="card">
  <div class="card-header ">
    <div class="mb-4">
      <%= search_form_for @q, url: products_path, method: :get, html: { class: "row g-2 align-items-end" } do |f| %>
        <div class="col-md-1">
          <%= f.label :name_or_sku_cont, "Search", class: "form-label" %>
          <%= f.search_field :name_or_sku_cont, placeholder: "name or sku...", class: "form-control" %>
        </div>

        <div class="col-md-1">
          <%= f.label :category_id_eq, "Category" %>
          <%= f.select :category_id_eq,options_for_select(@categories.map { |id, name| [name, id] }, params.dig(:q, :category_id_eq)),{ include_blank: "Categories" },class: "form-select" %>
        </div>

        <div class="col-md-1">
          <%= f.label :s, "Sort by", class: "form-label" %>
          <%= f.select :s, [
              ['Newest First', 'created_at desc'],
              ['Oldest First', 'created_at asc']
            ],
            { include_blank: "Select..." },
            class: "form-select" %>
        </div>

        <div class="col-md-2">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </div>
        <div class="col-md-2">
          <%= link_to "New Product", new_product_path, class: "btn btn-sm btn-primary " %>
        </div>
      <% end %>
    </div>

  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap mb-0">
      <thead>
        <tr>
          <th> # </th>
          <th><%= sort_link @q, :name, "Name" %></th>
          <th><%= sort_link @q, :sku, "SKU" %></th>
          <th><%= sort_link @q, :category_name, "Category" %></th>
          <th><%= sort_link @q, :unit_of_measurement_name, "UOM" %></th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each_with_index do |product, index| %>
          <tr>
            <td><%= (@products.current_page - 1) * @products.limit_value + index + 1 %></td>
            <td><%= product.name %></td>
            <td><%= product.sku %></td>
            <td><%= product.category.name %></td>
            <td><%= product.unit_of_measurement.name %></td>
            <td>
              <%= link_to product_path(product), class: "btn btn-sm btn-info", title: "Show" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_product_path(product), class: "btn btn-sm btn-warning", title: "Edit" do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>
              <%= button_to product_path(product), method: :delete, form: { class: "d-inline" }, class: "btn btn-sm btn-danger product-show-delete-modal", title: "Delete", data: {
                url: product_path(product),
                name: product.name,
                sku: product.sku
              } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-3 d-flex justify-content-center">
      <%= paginate @products %>
    </div>
  </div>
</div>