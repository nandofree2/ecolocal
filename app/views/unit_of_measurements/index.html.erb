<% content_for :page_title, "Unit Of Measurement" %>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">Units of Measurement</h3>
    <div class="card-tools">
      <%= link_to new_unit_of_measurement_path, class: "btn btn-sm btn-primary" do %>
        <i class="fas fa-plus"></i> New UOM
      <% end %>
    </div>
  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>SKU</th>
          <th>Quantity</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @unit_of_measurements.each do |uom| %>
          <tr>
            <td><%= uom.name %></td>
            <td><%= uom.sku %></td>
            <td><%= uom.quantity %></td>
            <td class="text-right">
              <%= link_to unit_of_measurement_path(uom), class: "btn btn-sm btn-info", title: "Show" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_unit_of_measurement_path(uom), class: "btn btn-sm btn-warning", title: "Edit" do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>
              <%= button_to unit_of_measurement_path(uom), method: :delete, form: { class: "d-inline" }, class: "btn btn-sm btn-danger unit-of-measurement-show-delete-modal", title: "Delete", data: {
                url: unit_of_measurement_path(uom),
                name: uom.name,
                sku: uom.sku
              } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
