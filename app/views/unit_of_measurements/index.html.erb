<% content_for :page_title, "Unit Of Measurement" %>

<div class="card">
  <div class="card-header ">
      <div class="mb-4">

        <%= search_form_for @q, url: unit_of_measurements_path, method: :get, html: { class: "row g-2 align-items-end" } do |f| %>
          <div class="col-md-1">
            <%= f.label :name_or_sku_cont, "Search", class: "form-label" %>
            <%= f.search_field :name_or_sku_cont, placeholder: "name or sku...", class: "form-control" %>
          </div>

          <div class="col-md-2">
            <%= f.submit "Search", class: "btn btn-primary" %>
          </div>
          <div class="col-md-2">
            <%= link_to new_unit_of_measurement_path, class: "btn btn-sm btn-primary" do %>
              <i class="fas fa-plus"></i> New Category
            <% end %>
          </div>
        <% end %>
      </div>
  </div>

  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap mb-0">
      <thead>
        <tr>
          <th>#</th>
          <th><%= sort_link @q, :name, "Name" %></th>
          <th><%= sort_link @q, :sku, "SKU" %></th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @unit_of_measurements.each_with_index do |uom, index| %>
          <tr>
            <td><%= (@unit_of_measurements.current_page - 1) * @unit_of_measurements.limit_value + index + 1 %></td>
            <td><%= uom.name %></td>
            <td><%= uom.sku %></td>
            <td><%= uom.quantity %></td>
            <td class="text-right">
              <%= link_to unit_of_measurement_path(uom), class: "btn btn-sm btn-info", title: "Show" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_unit_of_measurement_path(uom), class: "btn btn-sm btn-warning", title: "Edit" do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>
              <%= button_to unit_of_measurement_path(uom), method: :delete, form: { class: "d-inline" }, class: "btn btn-sm btn-danger unit-of-measurement-show-delete-modal", title: "Delete", data: {
                url: unit_of_measurement_path(uom),
                name: uom.name,
                sku: uom.sku
              } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
